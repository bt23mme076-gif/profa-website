rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      // Replace with your actual admin email
      return request.auth != null && 
             request.auth.token.email == 'jatin@example.com';
    }
    
    // ========== CONTENT COLLECTION ==========
    // Anyone can read website content
    // Only admin can write/update
    match /content/{document=**} {
      allow read: true;
      allow write, update, delete: if isAdmin();
    }
    
    // ========== NEWSLETTER SUBSCRIBERS ==========
    // Anyone can create (subscribe)
    // Only admin can read all subscribers
    match /newsletter_subscribers/{subscriberId} {
      allow create: true;
      allow read, update, delete: if isAdmin();
      
      // Prevent duplicate subscriptions
      allow create: if request.resource.data.email is string &&
                      request.resource.data.email.size() > 0;
    }
    
    // ========== BLOG POSTS (Future Feature) ==========
    match /blog_posts/{postId} {
      allow read: true;
      allow write, update, delete: if isAdmin();
    }
    
    // ========== COURSES (Future Feature) ==========
    match /courses/{courseId} {
      allow read: true;
      allow write, update, delete: if isAdmin();
    }
    
    // ========== CONTACT FORM SUBMISSIONS ==========
    match /contact_submissions/{submissionId} {
      allow create: true;
      allow read, update, delete: if isAdmin();
    }
    
    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
